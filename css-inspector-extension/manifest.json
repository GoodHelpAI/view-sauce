{
  "manifest_version": 3,
  "name": "View Sauce",
  "version": "1.0",
  "description": "Instantly inspect and copy CSS styles from any element with a single click",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}